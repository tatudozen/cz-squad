    }
  }
</style>

<script>
  // Form validation on client-side
  const form = document.getElementById('retention-form') as HTMLFormElement;
  const nameInput = form.querySelector('#name') as HTMLInputElement;
  const emailInput = form.querySelector('#email') as HTMLInputElement;
  const phoneInput = form.querySelector('#phone') as HTMLInputElement;
  const consentCheckbox = form.querySelector('#consent') as HTMLInputElement;

  // Format phone input
  phoneInput?.addEventListener('input', (e) => {
    const target = e.target as HTMLInputElement;
    const cleaned = target.value.replace(/\D/g, '');
    if (cleaned.length === 10) {
      target.value = `(${cleaned.slice(0, 2)}) ${cleaned.slice(2, 6)}-${cleaned.slice(6)}`;
    } else if (cleaned.length === 11) {
      target.value = `(${cleaned.slice(0, 2)}) ${cleaned.slice(2, 7)}-${cleaned.slice(7)}`;
    }
  });

  // Form submission
  form?.addEventListener('submit', (e) => {
    e.preventDefault();

    // Validate
    let isValid = true;

    // Name validation
    if (!nameInput?.value || nameInput.value.length < 2) {
      showError('name-error', 'Nome deve ter pelo menos 2 caracteres');
      isValid = false;
    } else {
      hideError('name-error');
    }

    // Email validation
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailInput?.value || !emailRegex.test(emailInput.value)) {
      showError('email-error', 'Email invÃ¡lido');
      isValid = false;
    } else {
      hideError('email-error');
    }

    // Phone validation
    const phoneRegex = /^\(\d{2}\)\s?\d{8,9}$/;
    if (!phoneInput?.value || !phoneRegex.test(phoneInput.value.replace(/\s/g, ''))) {
      showError('phone-error', 'Telefone invÃ¡lido. Use formato: (11) 99999-9999');
      isValid = false;
    } else {
      hideError('phone-error');
    }

    // Consent validation
    if (!consentCheckbox?.checked) {
      alert('VocÃª deve concordar com os termos antes de continuar');
      isValid = false;
    }

    if (isValid) {
      // Success - would submit to API in production
      alert('Obrigado! Verifique seu email para acessar o material.');
      form.reset();
    }
  });

  function showError(elementId: string, message: string) {
    const element = document.getElementById(elementId);
    if (element) {
      element.textContent = message;
      element.classList.add('show');
    }
  }

  function hideError(elementId: string) {
    const element = document.getElementById(elementId);
    if (element) {
      element.textContent = '';
      element.classList.remove('show');
    }
  }
</script>
