  .stars {
    font-size: 1rem;
    margin-bottom: 1rem;
  }

  .quote {
    font-style: italic;
    margin-bottom: 1rem;
  }

  .author {
    font-weight: 600;
    font-size: 0.95rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section h1 {
      font-size: 1.75rem;
    }

    .hero-section p {
      font-size: 1rem;
    }

    .grid-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .pdf-preview {
      padding: 2rem 1.5rem;
    }

    .pdf-icon {
      font-size: 3rem;
    }

    .preview-title {
      font-size: 1rem;
    }

