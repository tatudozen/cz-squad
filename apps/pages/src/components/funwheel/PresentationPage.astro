<style define:vars={{
  '--brand-primary': brandProfile.color_palette.primary,
  '--brand-secondary': brandProfile.color_palette.secondary,
  '--brand-accent': brandProfile.color_palette.accent,
}}>
  .presentation-page {
    width: 100%;
  }

  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 4rem;
    padding: 4rem 2rem;
    background: linear-gradient(135deg, var(--brand-primary) 0%, var(--brand-accent) 100%);
    color: white;
    position: relative;
    overflow: hidden;
  }

  .hero-content h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .subheadline {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .hero .button {
    margin-top: 1rem;
  }

  .hero-visual {
    position: relative;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .gradient-blob {
    width: 300px;
    height: 300px;
    border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    animation: blob-animation 8s ease-in-out infinite;
  }

  @keyframes blob-animation {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(20px, -20px) scale(1.05); }
    50% { transform: translate(0, 20px) scale(1.1); }
    75% { transform: translate(-20px, -10px) scale(1.05); }
  }

  .scroll-indicator {
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  /* Sections */
  .section {
    padding: 4rem 2rem;
    position: relative;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section h2 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .description {
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: 2rem;
    text-align: center;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Problem Section */
  .problem {
    background: var(--brand-neutral);
  }

  .pain-points {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .pain-point {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    border-left: 4px solid var(--brand-accent);
    animation: slideUp 0.6s ease-out forwards;
    opacity: 0;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .pain-point .icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .pain-point p {
    margin: 0;
    color: #333;
  }

  /* Solution Section */
  .solution {
    background: white;
  }

  .approach-box {
    background: var(--brand-primary);
    color: white;
    padding: 2rem;
    border-radius: 8px;
    max-width: 800px;
    margin: 2rem auto 0;
  }

  .approach-box p {
    margin: 0;
    color: white;
  }

  /* Benefits Section */
  .benefits {
    background: linear-gradient(135deg, var(--brand-secondary) 10%, var(--brand-primary) 90%);
    color: white;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .benefit-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }

  .benefit-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.15);
  }

  .benefit-card h3 {
    margin-bottom: 1rem;
    color: white;
  }

  .benefit-card p {
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
  }

  /* Proof Social Section */
  .proof-social {
    background: white;
  }

  .testimonials {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .testimonial-card {
    background: var(--brand-neutral);
    padding: 2rem;
    border-radius: 8px;
    border-left: 4px solid var(--brand-secondary);
  }

  .quote {
    font-style: italic;
    margin-bottom: 1rem;
    color: #333;
  }

  .author {
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .title {
    font-size: 0.875rem;
    color: #999;
    margin: 0;
  }

  .results-and-credentials {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-top: 3rem;
  }

  .results,
  .credentials {
    padding: 2rem;
    border-radius: 8px;
    background: var(--brand-neutral);
  }

  .results h3,
  .credentials h3 {
    margin-bottom: 1.5rem;
    color: var(--brand-primary);
  }

  .results p,
  .credentials p {
    margin-bottom: 1rem;
    color: #333;
  }

  /* CTA Section */
  .cta-section {
    color: white;
    text-align: center;
  }

  .cta-content h2 {
    color: white;
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .cta-content .button {
    font-size: 1.125rem;
    padding: 1rem 2rem;
  }

  .cta-subtext {
    color: rgba(255, 255, 255, 0.8);
    margin-top: 1rem;
    font-size: 0.95rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero {
      grid-template-columns: 1fr;
      min-height: 80vh;
      padding: 2rem 1rem;
    }

    .hero-content h1 {
      font-size: 2rem;
    }

    .subheadline {
      font-size: 1rem;
    }

    .hero-visual {
      height: 250px;
    }

    .gradient-blob {
      width: 200px;
      height: 200px;
    }

    .section {
      padding: 2rem 1rem;
    }

    .section h2 {
      font-size: 1.75rem;
    }

    .pain-points,
    .benefits-grid,
    .testimonials {
      grid-template-columns: 1fr;
    }

    .results-and-credentials {
      grid-template-columns: 1fr;
    }

    .cta-content h2 {
      font-size: 1.5rem;
    }
  }
</style>
