---
/**
 * CarouselSlide Component
 * Individual carousel slide with copy and design notes
 *
 * Story 2.5: Carousel Astro Component
 */

import type { CarouselSlide as CarouselSlideType } from '@api/services/content/generators/carousel';

interface Props {
  slide: CarouselSlideType;
  carouselId: string;
  ariaLabel?: string;
}

const { slide, carouselId, ariaLabel } = Astro.props;
---

<style>
  .carousel-slide {
    flex: 0 0 100%;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    text-align: center;
    background: linear-gradient(135deg, #ffffff 0%, #f5f5f5 100%);
  }

  .slide-content {
    max-width: 90%;
    z-index: 2;
    animation: fadeIn 0.5s ease-in-out;
  }

  .slide-title {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 700;
    color: inherit;
    margin: 0 0 1rem 0;
    line-height: 1.3;
    word-break: break-word;
    word-wrap: break-word;
  }

  .slide-subtitle {
    font-size: clamp(0.875rem, 2vw, 1.125rem);
    color: #666;
    margin: 0 0 1.5rem 0;
    line-height: 1.5;
  }

  .slide-design-note {
    font-size: 0.875rem;
    color: #999;
    margin: 0;
    font-style: italic;
  }

  .slide-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(0, 0, 0, 0.1);
    color: #666;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    z-index: 1;
  }

  .slide-badge.cover {
    background: rgba(98, 32, 255, 0.1);
    color: #6220ff;
  }

  .slide-badge.cta {
    background: rgba(237, 20, 91, 0.1);
    color: #ed145b;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 640px) {
    .carousel-slide {
      padding: 1.5rem;
    }

    .slide-title {
      font-size: 1.25rem;
      margin-bottom: 0.75rem;
    }

    .slide-subtitle {
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }

    .slide-badge {
      top: 0.75rem;
      right: 0.75rem;
      padding: 0.375rem 0.75rem;
      font-size: 0.625rem;
    }
  }
</style>

<div
  class="carousel-slide"
  role="tabpanel"
  aria-label={ariaLabel}
  data-slide-number={slide.slide_number}
>
  <div class="slide-content">
    <h2 class="slide-title">{slide.main_text}</h2>
    {slide.support_text && (
      <p class="slide-subtitle">{slide.support_text}</p>
    )}
    <p class="slide-design-note">{slide.design_note}</p>
  </div>

  {slide.is_cover && (
    <div class="slide-badge cover">ðŸ“Œ Cover Slide</div>
  )}

  {slide.is_cta && (
    <div class="slide-badge cta">ðŸŽ¯ CTA Slide</div>
  )}
</div>
