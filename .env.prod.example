EVOLUTION_INSTANCE_NAME=copyzen-prod
EVOLUTION_API_KEY=seu-evolution-api-key

# =====================================
# FRONTEND
# =====================================
PUBLIC_API_URL=https://copyzen.seu-dominio.com

# =====================================
# OPERATOR CONFIGURATION
# =====================================
OPERATOR_API_KEY=seu-operator-api-key-secreto

