# =====================================
# CopyZen Production Environment Variables
# =====================================
# Copie este arquivo para .env.prod e preencha com valores reais

# Environment
NODE_ENV=production
LOG_LEVEL=info

# =====================================
# DOCKER REGISTRY
# =====================================
DOCKER_REGISTRY=docker.io/seu-username
DOCKER_USERNAME=seu-username
DOCKER_PASSWORD=seu-docker-password

# =====================================
# API CONFIGURATION
# =====================================
API_PORT=3000
API_HOST=0.0.0.0
API_DOMAIN=copyzen.seu-dominio.com

# =====================================
# DATABASE - PostgreSQL
# =====================================
# Local Docker PostgreSQL
POSTGRES_USER=copyzen
POSTGRES_PASSWORD=super-secure-password-change-me
POSTGRES_DB=copyzen

# OR use Supabase
SUPABASE_URL=https://seu-project-id.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.seu-token-aqui
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.seu-service-role-token-aqui

# =====================================
# LLM - Anthropic Claude
# =====================================
ANTHROPIC_API_KEY=sk-ant-seu-api-key-aqui
ANTHROPIC_MODEL=claude-opus-4

# Fallback LLM (optional)
DEEPSEEK_API_KEY=
OPENROUTER_API_KEY=

# =====================================
# n8n INTEGRATION
# =====================================
N8N_API_URL=http://n8n:5678/api
N8N_API_KEY=seu-n8n-api-key

# =====================================
# EVOLUTION API (WhatsApp Integration)
# =====================================
